# SMTP Email Configuration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@example.com
EMAIL_SMTP_PASSWORD=your-password
EMAIL_SMTP_REJECT_UNAUTHORIZED=true
EMAIL_FROM=noreply@dlh-project.com

# Authentication Configuration
BETTER_AUTH_SECRET=your-secret-key-change-me
BETTER_AUTH_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Example for Gmail
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_SECURE=false
# EMAIL_SMTP_USER=your-gmail@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password
# EMAIL_FROM=your-gmail@gmail.com

# MinIO Configuration (untuk penyimpanan file)
# Ganti nilai-nilai ini dengan konfigurasi MinIO di Railway
MINIO_ENDPOINT=your-minio-app.railway.app
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your-minio-access-key

# Database Configuration
# For production, use a proper database URL like:
DATABASE_URL="postgresql://username:password@localhost:5432/mydb"
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=dlh-bucket

